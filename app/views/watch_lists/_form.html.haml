= form_for @watch_list do |f|
  -if @watch_list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@watch_list.errors.count, "error")} prohibited this watch_list from being saved:"
      %ul
        - @watch_list.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :stocks
    = f.text_area :stocks
  .actions
    = f.submit 'Save'
